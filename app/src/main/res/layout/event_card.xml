<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/event_name"
            style="@style/PageHeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="Event 1"/>

        <TextView
            android:id="@+id/event_date"
            style="@style/ParagraphHeadingTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_alignParentStart="true"
            android:layout_below="@id/event_name"
            android:layout_marginBottom="@dimen/margin_small"
            tools:text="20 Aug, 2017"/>

        <TextView
            android:id="@+id/event_time"
            style="@style/ParagraphHeadingTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/event_name"
            tools:text="10:00 am"/>

        <TextView
            android:id="@+id/event_venue"
            style="@style/ParagraphHeadingTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@id/event_date"
            android:layout_marginBottom="@dimen/margin_small"
            tools:text="Venue: Auditorium" />

        <TextView
            android:id="@+id/event_desc"
            style="@style/ParagraphTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/event_venue"
            tools:text="Lorem ipsum text sdbhk sj dshu jhsdfuj hgsdfajb jhgsdfjh jhfsdaub jhsdfguhb fdsjhjhb fdsjhubdfsmn jhgfsub"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>